# Changes require a restart to take effect.

# Ensure LishaLinux bins are in the path
export LISHALINUX_PATH=$HOME/.local/share/lishalinux
export PATH=$LISHALINUX_PATH/bin:$PATH

# Set default terminal and editor
source ~/.config/uwsm/default

# Activate mise if present on the system
lishalinux-cmd-present mise && eval "$(mise activate bash)"
