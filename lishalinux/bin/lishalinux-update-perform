#!/bin/bash

set -e

# Ensure screensaver/sleep doesn't set in during updates
hyprctl dispatch tagwindow +noidle &>/dev/null || true

# Capture update logs
exec > >(tee "/tmp/lishalinux-update.log") 2>&1

# Perform all update steps
lishalinux-update-time
lishalinux-update-system-pkgs

lishalinux-update-analyze-logs

lishalinux-update-restart

# Re-enable screensaver/sleep after updates
hyprctl dispatch tagwindow -- -noidle &>/dev/null || true
