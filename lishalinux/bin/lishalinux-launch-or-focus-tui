#!/bin/bash

# Launch or focus on a given TUI identified by the passed in as the command.
# Use by commands like lishalinux-launch-wifi to ensure there is only one wifi configuration screen open.

APP_ID="org.lishalinux.$(basename "$1")"
LAUNCH_COMMAND="lishalinux-launch-tui $@"

exec lishalinux-launch-or-focus "$APP_ID" "$LAUNCH_COMMAND"
