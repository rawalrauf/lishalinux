#!/bin/bash

# Launch a floating terminal with the Lishalinux logo presentation, then execute the command passed in, and finally end with the lishalinux-show-done presentation.
# Used by actions such as Update System.

cmd="$*"
exec setsid uwsm-app -- xdg-terminal-exec --app-id=org.lishalinux.terminal --title=Lishalinux -e bash -c "lishalinux-show-logo; $cmd; if [ \$? -ne 130 ]; then lishalinux-show-done; fi"
