{
  "header_modules": [
    {
      "id": "color_picker",
      "icon": "󰏘",
      "command": "hyprpicker -a",
      "position": "left"
    },
    {
      "id": "settings",
      "icon": "󰒓",
      "command": "gnome-control-center",
      "position": "right"
    },
    {
      "id": "lock",
      "icon": "󰌾",
      "command": "hyprlock",
      "position": "right"
    },
    {
      "id": "power",
      "icon": "󰐥",
      "command": "systemctl poweroff",
      "position": "right",
      "expandable": true,
      "expand_id": "header_power",
      "css_class": "power-button",
      "expand_options": [
        {
          "icon": "󰜉",
          "label": "Restart",
          "command": "systemctl reboot"
        },
        {
          "icon": "󰒲",
          "label": "Sleep",
          "command": "systemctl suspend"
        },
        {
          "icon": "󰍃",
          "label": "Logout",
          "command": "hyprctl dispatch exit"
        }
      ]
    }
  ],
  "capsule_modules": [
    {
      "row": 1,
      "modules": [
        {
          "id": "wifi",
          "icon": "󰤨",
          "title": "Wi-Fi",
          "subtitle_source": "wifi_name",
          "active_source": "wifi_active",
          "expandable": true,
          "expand_options": [
            {
              "type": "network_list",
              "networks": ["Vista", "Home-WiFi", "Office-5G"]
            }
          ]
        },
        {
          "id": "bluetooth",
          "icon": "󰂯",
          "title": "Bluetooth",
          "subtitle_source": "bluetooth_status",
          "active_source": "bluetooth_active",
          "expandable": true,
          "expand_options": [
            {
              "type": "device_list",
              "devices": ["AirPods Pro", "Mouse", "Keyboard"]
            }
          ]
        }
      ]
    },
    {
      "row": 2,
      "modules": [
        {
          "id": "power_mode",
          "icon": "󰁹",
          "title": "Power Mode",
          "subtitle_source": "power_mode",
          "active": true,
          "expandable": true,
          "expand_options": [
            {
              "type": "option_list",
              "options": ["Performance", "Balanced", "Power-saver"],
              "current_source": "power_mode"
            }
          ]
        },
        {
          "id": "night_light",
          "icon": "󰖔",
          "title": "Night Light",
          "subtitle": "",
          "active_source": "night_light_active",
          "toggle_action": "toggle_night_light"
        }
      ]
    },
    {
      "row": 3,
      "modules": [
        {
          "id": "dark_style",
          "icon": "󰖔",
          "title": "Dark Style",
          "subtitle": "",
          "active_source": "dark_mode",
          "toggle_action": "toggle_dark_style"
        },
        {
          "id": "keyboard",
          "icon": "󰌌",
          "title": "Keyboard",
          "subtitle": "",
          "active": false
        }
      ]
    },
    {
      "row": 4,
      "modules": [
        {
          "id": "airplane",
          "icon": "󰀝",
          "title": "Airplane Mode",
          "subtitle": "",
          "active_source": "airplane_mode",
          "toggle_action": "toggle_airplane_mode"
        },
        {
          "id": "tiling",
          "icon": "󰕰",
          "title": "Tiling",
          "subtitle": "",
          "active": true
        }
      ]
    }
  ]
}
